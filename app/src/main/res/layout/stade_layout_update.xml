<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/form_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/stade_layout_form"/>
    </RelativeLayout>


    <Button
        android:id="@+id/button_update_stade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_alignBaseline="@+id/button_noupdate_stade"
        android:layout_alignBottom="@+id/button_noupdate_stade"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:padding="20dp"
        android:text="Modifier le stade"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/button_noupdate_stade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/form_part"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="30dp"
        android:layout_toStartOf="@+id/button_update_stade"
        android:background="@color/colorPrimary"
        android:padding="20dp"
        android:text="Annuler"
        android:textColor="@android:color/white" />


</RelativeLayout>